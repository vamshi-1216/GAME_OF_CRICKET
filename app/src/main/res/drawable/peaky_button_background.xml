<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Dark inside -->
            <stroke
                android:width="2dp"
                android:color="#FFD700" />     <!-- Gold border -->
            <corners android:radius="12dp" />  <!-- Rounded corners -->
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>
